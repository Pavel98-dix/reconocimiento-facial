<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/f_home"
    android:backgroundTint="@color/colorLetter"
    android:padding="15dp"
    tools:context=".ui.home.HomeFragment">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="189dp"
        android:layout_height="189dp"
        android:tint="@color/colorDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.163"
        app:srcCompat="@drawable/ic_informacion_personal" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="66dp"
        android:layout_height="47dp"
        android:layout_marginStart="12dp"
        android:tint="@color/color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserName"
        app:layout_constraintVertical_bias="0.299"
        app:srcCompat="@drawable/ic_informacion_personal" />

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorDark"
        android:textSize="30sp"
        android:text="aqui va el nombre mamalon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.127" />

    <Button
        android:id="@+id/btnDatos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/btnDatos"
        android:textColor="@drawable/txt_btn_white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>